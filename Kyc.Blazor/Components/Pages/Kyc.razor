@page "/kyc"
@using Microsoft.AspNetCore.Components.Forms
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>KYC Form</PageTitle>

<div class="container mt-5">
    <div class="card shadow-sm p-4 mb-4">
        <h3 class="text-center mb-4">KYC Form</h3>

        <EditForm EditContext="_editContext!" OnValidSubmit="SaveKyc" FormName="KycForm">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <!-- Full Name -->
            <div class="mb-3">
                <label>Full Name</label>
                <InputText class="form-control" @bind-Value="kycModel.FullName" />
                <ValidationMessage For="() => kycModel.FullName" />
            </div>

            <!-- Phone -->
            <div class="mb-3">
                <label>Phone</label>
                <InputText class="form-control" @bind-Value="kycModel.PhoneNo" />
                <ValidationMessage For="() => kycModel.PhoneNo" />
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label>Email</label>
                <InputText class="form-control" @bind-Value="kycModel.Email" />
                <ValidationMessage For="() => kycModel.Email" />
            </div>

            <!-- Date of Birth -->
            <div class="mb-3">
                <label>Date of Birth</label>
                <InputDate class="form-control" @bind-Value="kycModel.DateOfBirth" />
                <ValidationMessage For="() => kycModel.DateOfBirth" />
            </div>

            <!-- Province -->
            <div class="mb-3">
                <label>Province</label>
                <InputSelect TValue="int?" class="form-select" @bind-Value="ProvinceId">
                    <option value="">-- Select Province --</option>
                    @foreach (var p in Provinces)
                    {
                        <option value="@p.ProvinceId">@p.ProvinceName</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => kycModel.ProvinceId" />
            </div>

            <!-- District -->
            <div class="mb-3">
                <label>District</label>
                <InputSelect TValue="int?" class="form-select"
                             @bind-Value="DistrictId"
                             disabled="@(!ProvinceId.HasValue)">
                    <option value="">-- Select District --</option>
                    @foreach (var d in Districts)
                    {
                        <option value="@d.DistrictId">@d.DistrictName</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => kycModel.DistrictId" />
            </div>

            <!-- Municipality -->
            <div class="mb-3">
                <label>Municipality</label>
                <InputSelect TValue="int?" class="form-select"
                             @bind-Value="MunicipalityId"
                             disabled="@(!DistrictId.HasValue)">
                    <option value="">-- Select Municipality --</option>
                    @foreach (var m in Municipalities)
                    {
                        <option value="@m.MunicipalityId">@m.MunicipalityName</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => kycModel.MunicipalityId" />
            </div>

            <!-- Ward -->
            <div class="mb-3">
                <label>Ward</label>
                <InputSelect TValue="int?" class="form-select"
                             @bind-Value="kycModel.WardId"
                             disabled="@(!MunicipalityId.HasValue)">
                    <option value="">-- Select Ward --</option>
                    @foreach (var w in Wards)
                    {
                        <option value="@w.WardId">@w.WardNo</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => kycModel.WardId" />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </EditForm>
    </div>

    <!-- Saved Records -->
    <h4>Saved KYC Records</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>DOB</th>
                <th>Province</th>
                <th>District</th>
                <th>Municipality</th>
                <th>Ward</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in KycList)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.PhoneNo</td>
                    <td>@item.Email</td>
                    <td>@item.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                    <td>@ProvinceNames.GetValueOrDefault(item.ProvinceId ?? 0)</td>
                    <td>@DistrictNames.GetValueOrDefault(item.DistrictId ?? 0)</td>
                    <td>@MunicipalityNames.GetValueOrDefault(item.MunicipalityId ?? 0)</td>
                    <td>@WardNames.GetValueOrDefault(item.WardId ?? 0)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private KycFormModel kycModel = new();
    private EditContext? _editContext;

    private List<ProvinceDto> Provinces = new();
    private List<DistrictDto> Districts = new();
    private List<MunicipalityDto> Municipalities = new();
    private List<WardDto> Wards = new();

    private List<KycRecordDto> KycList = new();

    private Dictionary<int, string> ProvinceNames = new();
    private Dictionary<int, string> DistrictNames = new();
    private Dictionary<int, string> MunicipalityNames = new();
    private Dictionary<int, string> WardNames = new();

    /* -------------------------
       BLAZOR-APPROVED BINDINGS
       ------------------------- */

    private int? ProvinceId
    {
        get => kycModel.ProvinceId;
        set
        {
            if (kycModel.ProvinceId != value)
            {
                kycModel.ProvinceId = value;
                _ = LoadDistricts();
            }
        }
    }

    private int? DistrictId
    {
        get => kycModel.DistrictId;
        set
        {
            if (kycModel.DistrictId != value)
            {
                kycModel.DistrictId = value;
                _ = LoadMunicipalities();
            }
        }
    }

    private int? MunicipalityId
    {
        get => kycModel.MunicipalityId;
        set
        {
            if (kycModel.MunicipalityId != value)
            {
                kycModel.MunicipalityId = value;
                _ = LoadWards();
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        _editContext = new EditContext(kycModel);

        Provinces = await Http.GetFromJsonAsync<List<ProvinceDto>>("api/location/province") ?? new();
        ProvinceNames = Provinces.ToDictionary(p => p.ProvinceId, p => p.ProvinceName);

        var allDistricts = await Http.GetFromJsonAsync<List<DistrictDto>>("api/location/district") ?? new();
        DistrictNames = allDistricts.ToDictionary(d => d.DistrictId, d => d.DistrictName);

        var allMunicipalities = await Http.GetFromJsonAsync<List<MunicipalityDto>>("api/location/municipality") ?? new();
        MunicipalityNames = allMunicipalities.ToDictionary(m => m.MunicipalityId, m => m.MunicipalityName);

        var allWards = await Http.GetFromJsonAsync<List<WardDto>>("api/location/ward") ?? new();
        WardNames = allWards.ToDictionary(w => w.WardId, w => w.WardNo.ToString());

        await LoadKycList();
    }

    private async Task LoadDistricts()
    {
        Districts.Clear();
        Municipalities.Clear();
        Wards.Clear();

        kycModel.DistrictId = null;
        kycModel.MunicipalityId = null;
        kycModel.WardId = null;

        if (ProvinceId.HasValue)
        {
            Districts = await Http.GetFromJsonAsync<List<DistrictDto>>(
                $"api/location/district/{ProvinceId.Value}") ?? new();
        }

        StateHasChanged();
    }

    private async Task LoadMunicipalities()
    {
        Municipalities.Clear();
        Wards.Clear();

        kycModel.MunicipalityId = null;
        kycModel.WardId = null;

        if (DistrictId.HasValue)
        {
            Municipalities = await Http.GetFromJsonAsync<List<MunicipalityDto>>(
                $"api/location/municipalities/{DistrictId.Value}") ?? new();
        }

        StateHasChanged();
    }

    private async Task LoadWards()
    {
        Wards.Clear();
        kycModel.WardId = null;

        if (MunicipalityId.HasValue)
        {
            Wards = await Http.GetFromJsonAsync<List<WardDto>>(
                $"api/location/wards/{MunicipalityId.Value}") ?? new();
        }

        StateHasChanged();
    }

    private async Task SaveKyc()
    {
        if (!_editContext!.Validate())
            return;

        var response = await Http.PostAsJsonAsync("api/kyc", kycModel);
        if (!response.IsSuccessStatusCode)
            return;

        await LoadKycList();

        kycModel = new();
        _editContext = new EditContext(kycModel);

        Districts.Clear();
        Municipalities.Clear();
        Wards.Clear();
    }

    private async Task LoadKycList()
    {
        KycList = await Http.GetFromJsonAsync<List<KycRecordDto>>("api/kyc") ?? new();
    }
}
